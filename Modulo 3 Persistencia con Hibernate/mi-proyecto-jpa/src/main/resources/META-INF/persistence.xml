<?xml version="1.0" encoding="UTF-8"?>
<!--Persistence Unit-->
<!--  REFERENCIA: https://jakarta.ee/specifications/persistence/3.1/  -->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.0">

    <!--
        Transaction Type:
            - RESOURCE_LOCAL: Uso local de recursos JDBC
            - JTA: Uso Remoto en servidor de aplicaciones
    -->

    <persistence-unit name="bookstore-pu" transaction-type="RESOURCE_LOCAL">
        <!--
            Hibernate -> Framework de presistnecia JPA
            Proveedor de Presistencia -> Uso de JPA
        -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <!-- JDBC connection for MySQL -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/bookstore"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="56457977Ac*"/>

            <!-- Hibernate configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>