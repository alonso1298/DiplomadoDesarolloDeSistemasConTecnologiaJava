<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- bean definitions here -->
    <bean id="empleado" class="dgtic.core.modelo.Empleado">
        <constructor-arg value="Rebeca"/>
        <property name="edad" value="34"/>
        <!-- Cuando se hace referencia a un bean es con ref-->
        <property name="actividades" ref="GestionProyectos"/>
    </bean>
    <bean id="empleadoDos" class="dgtic.core.modelo.Empleado">
            <constructor-arg ref="Conocimientos"/>
    </bean>
    <!-- Se crea un bean de gestion de proyectos -->
    <bean id="GestionProyectos" class="dgtic.core.modelo.GestionProyectos"/>
    <bean id="Conocimientos" class="dgtic.core.modelo.IntercambioConocimientos"/>
</beans>